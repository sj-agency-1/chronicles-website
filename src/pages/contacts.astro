---
import PageLayout from '~/layouts/PageLayout.astro';
import ContactList from '~/components/structures/ContactList.astro';

const metadata = {
  title: 'Контакты',
  ignoreTitleTemplate: true,
};
const breadCrumbLinks = [
  { text: 'Главная', href: '/' },
  { text: 'Контакты', href: '/contacts' },
];
---

<PageLayout
  {breadCrumbLinks}
  {metadata}
  heroItems={[
    {
      title: 'Контакты',
      bgImage: '~/assets/images/pages/contacts.webp',
    },
  ]}
>
  <ContactList />
</PageLayout>
