---
import '~/assets/styles/fonts.css';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Proxima Nova';
    --aw-font-serif: 'Proxima Nova';
    --aw-font-heading: 'PP Right Grotesk';

    --aw-color-primary: #0f130f;
    --aw-color-secondary: #f6dc44;
    --aw-color-accent: #e9e0d5;

    --aw-color-text-heading: #0f130f;
    --aw-color-text-default: #777068;
    --aw-color-text-muted: #8d8b89;
    --aw-color-bg-page: #fff9f2;

    --aw-color-bg-page-dark: #0f130f;

    ::selection {
      background-color: lavender;
    }

    --aw-color-disabled: #D9D9D9;
    --aw-color-text-black: #302D2A;
  }

  .dark {
    --aw-font-sans: 'Proxima Nova';
    --aw-font-serif: 'Proxima Nova';
    --aw-font-heading: 'PP Right Grotesk';

    --aw-color-primary: #e9e0d5;
    --aw-color-secondary: #f6dc44;
    --aw-color-accent: #0f130f;

    --aw-color-text-heading: #e9e0d5;
    --aw-color-text-default: #777068;
    --aw-color-text-muted: #8d8b89;
    --aw-color-bg-page: #0f130f;

    ::selection {
      background-color: black;
      color: snow;
    }
  }

  html {
    scroll-behavior: smooth;
  }
</style>
