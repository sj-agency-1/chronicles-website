---
import GalleryItem from './GalleryItem.astro';
import type { GalleryItemProps } from './GalleryItem.astro';

interface GalleryGridProps {
  items: GalleryItemProps[];
}

const { items } = Astro.props as GalleryGridProps;
---

<div class="gallery-grid">
  {
    items.map((item) => (
      <div class="gallery-grid__item">
        <GalleryItem {...item} />
      </div>
    ))
  }
</div>

<style>
  .gallery-grid {
    column-count: 1;
    column-gap: 1rem; /* gap-4 */
    width: 100%;
  }

  @media (min-width: 640px) {
    .gallery-grid {
      column-count: 2;
    }
  }

  @media (min-width: 1024px) {
    .gallery-grid {
      column-count: 3;
    }
  }

  .gallery-grid__item {
    break-inside: avoid;
    margin-bottom: 1rem; /* gap-4 */
    display: inline-block;
    width: 100%;
  }
</style>
