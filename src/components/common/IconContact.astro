---
import Image from './Image.astro';

export interface ContactProps {
  type: 'telegram' | 'whatsapp' | 'email';
  size?: 'small' | 'regular' | 'large';
}

const { type, size = 'regular' } = Astro.props as ContactProps;

const sizeMapping = {
  small: 40,
  regular: 70,
  large: 180,
};

const imageSource = `~/assets/images/contacts/${type}.webp`;
if (!imageSource) {
  throw 'Invalid skill type for IconSkill component.';
}

// Sizes
const width = sizeMapping[size];
const height = width;
---

<Image src={imageSource} alt={`${type}-icon`} width={width} height={height} />
